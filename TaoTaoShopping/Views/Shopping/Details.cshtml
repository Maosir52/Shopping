@model TaoTaoShopping.Models.shopping

@{
    ViewBag.Title = "Details";
}

<h2>商品详情</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            商品名称：
        </dt>

        <dd>
            @Html.DisplayFor(model => model.title)
        </dd>

        <dt>
            商品原价：
        </dt>

        <dd>
            @Html.DisplayFor(model => model.price)
        </dd>

        <dt>
            商品促销价:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sale_price)
        </dd>

        <dt>
            商品数量：
        </dt>

        <dd>
            @Html.DisplayFor(model => model.number)
        </dd>

        <dt>
            商品详情介绍：
        </dt>

        <dd>
            @Html.DisplayFor(model => model.detail)
        </dd>

        <dt>
            商品封面：
        </dt>

        <dd>
            @if (string.IsNullOrEmpty(Model.img))
            {
                <img src="~/Content/pic/0411171619.png" width="100" height="100" alt="Alternate Text" />
            }
            else
            {
                <img src="@Model.img" width="100" height="100" alt="Alternate Text" />
            }
        </dd>

        <dt>
            商品编号：
        </dt>

        <dd>
            @Html.DisplayFor(model => model.shop_number)
        </dd>

        <dt>
            商品分类：
        </dt>

        <dd>
            @Html.DisplayFor(model => model.category.catename)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("返回商品管理列表", "Index")
</p>

