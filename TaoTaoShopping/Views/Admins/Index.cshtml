@model IEnumerable<TaoTaoShopping.Models.admin>

@{
    ViewBag.Title = "Index";
}

<h2 align="center">管理员管理</h2>

<p>
    <a href="/Admins/Create" class="btn btn-success">添加管理员</a>
</p>
@* 搜索区域 *@
<div class="row" style="margin:10px 0;">
    <div class="col-lg-12">
        <center>
            <form action="" method="get">
                搜索昵称： <input type="text" class="form-control" style="display:inline-block;width:200px;" name="keyword" value="@(Request.QueryString["keyword"] != null ? Request.QueryString["keyword"]:"" )" placeholder="请输入关键字" /> <input type="submit" name="submit" value="搜索" class="btn btn-info" />
            </form>
        </center>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            用户名
        </th>
        <th>
            昵称
        </th>
        <th>
            权限
        </th>
        <th>
            添加时间
        </th>
        <th>操作</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nickname)
            </td>
            <td>
                @if (item.power == 1)
                {
                    <b>超级管理员</b>
                }
                else
                {
                    <b>管理员</b>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.createtime)
            </td>
            <td>
                <a href="/Admins/Edit?id=@item.id" class="btn btn-warning">编辑</a>
                <a href="/Admins/Delete?id=@item.id" onclick="return confirm('是否删除该数据？')" class="btn btn-danger">删除</a>
            </td>
        </tr>
    }

</table>
