@model TaoTaoShopping.Models.admin

@{
    ViewBag.Title = "Edit";
}

<h2 align="center">修改密码</h2>


<form action="/Admins/Edit" method="post">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.username, "用户名：", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" disabled value="@Model.username" class="form-control" />
                <input type="hidden" name="username" value="@Model.username" />

                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.pwd, "密码：", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="password" name="pwd" class="form-control" value="@Model.pwd" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nickname, "昵称：", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nickname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nickname, "", new { @class = "text-danger" })
            </div>
        </div>
        <input type="hidden" name="power" value="@Model.power" />
        <input type="hidden" name="createtime" value="@Model.createtime" />


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="编辑" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
