@model IEnumerable<TaoTaoShopping.Models.comment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2 align="center">我的评论</h2>
@* 搜索区域 *@
<div class="row" style="margin:10px 0;">
    <div class="col-lg-12">
        <center>
            <form action="" method="get">
                搜索评论内容： <input type="text" class="form-control" style="display:inline-block;width:200px;" name="keyword" value="@(Request.QueryString["keyword"] != null ? Request.QueryString["keyword"]:"" )" placeholder="请输入关键字" /> <input type="submit" name="submit" value="搜索" class="btn btn-info" />
            </form>
        </center>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            评论内容
        </th>
        <th>
            评论时间
        </th>
        <th>
            评论商品
        </th>
        <th>
            评论人
        </th>
        <th>操作</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.detail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.createtime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.shopping.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.user.username)
            </td>
            <td>
                <a href="/Comment/Delete?id=@item.id" onclick="return confirm('是否删除该数据？')" class="btn btn-danger">删除</a>
            </td>
        </tr>
    }

</table>
