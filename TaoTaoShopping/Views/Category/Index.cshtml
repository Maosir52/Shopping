@model IEnumerable<TaoTaoShopping.Models.category>

@{
    ViewBag.Title = "Index";
}

<h2 align="center">分类管理</h2>

<p>
    <a href="/Category/Create" class="btn btn-success">添加分类</a>
</p>
@* 搜索区域 *@
<div class="row" style="margin:10px 0;">
    <div class="col-lg-12">
        <center>
            <form action="" method="get">
                搜索分类： <input type="text" class="form-control" style="display:inline-block;width:200px;" name="keyword" value="@(Request.QueryString["keyword"] != null ? Request.QueryString["keyword"]:"" )" placeholder="请输入关键字" /> <input type="submit" name="submit" value="搜索" class="btn btn-info" />
            </form>
        </center>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            商品分类名称
        </th>
        <th>操作</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.catename)
            </td>
            <td>
                <a href="/Category/Edit?id=@item.id" class="btn btn-warning">编辑</a>
                <a href="/Category/Delete?id=@item.id" onclick="return confirm('是否删除该数据？')" class="btn btn-danger">删除</a>
            </td>
        </tr>
    }

</table>
