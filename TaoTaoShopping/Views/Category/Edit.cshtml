@model TaoTaoShopping.Models.category

@{
    ViewBag.Title = "Edit";
}

<h2 align="center">编辑分类</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.catename, "分类名称", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.catename, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.catename, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div align="center">
    @Html.ActionLink("返回分类列表", "Index")
</div>
